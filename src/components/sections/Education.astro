---
import Section from '@/components/Section.astro';

import { education } from "@cv";
---

<Section title="Education">
	<ul>
		{
			education.map(
				({
					institution,
					startDate,
					endDate,
					area,
					url,
					studyType,
				}) => {
					const startYear = new Date(startDate).getFullYear();
					const endYear =
						endDate != null
							? new Date(endDate).getFullYear()
							: "Actual";
					const years = endDate ? `${startYear} - ${endYear}` : `${startYear}`;

					return (
						<li>
							<article>
								<header>
									<div>
										<h3>{institution}</h3>
										<h4>{area}</h4>
									</div>

									<time>{years}</time>
								</header>
							</article>
						</li>
					);
				},
			)
		}
	</ul>
</Section>

<style>
	ul {
		display: flex;
		flex-direction: column;
		gap: 32px;
	}

	article h3 {
		font-weight: 500;
		color: #111;
	}

	article h4 {
		color: #222;
		font-weight: 400;
	}

	header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 4px;
	}

	time {
		color: #555;
		font-size: 0.85rem;
	}

	a {
		color: #777;
		display: inline-flex;
		border: 1px solid #eee;
		padding: 4px;
		border-radius: 4px;
		transition: all 0.3s ease;
	}

	a:hover {
		background: #eee;
		border: 1px solid #ddd;
	}
</style>
